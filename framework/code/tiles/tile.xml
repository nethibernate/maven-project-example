<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>3.3.0</version>
        <dependencies>
          <dependency>
            <groupId>com.xxx.game</groupId>
            <artifactId>assembly</artifactId>
            <version>${revision}</version>
          </dependency>
        </dependencies>
        <executions>
          <execution>
            <id>zip-all</id>
            <configuration>
              <tiles-keep-id>true</tiles-keep-id>
              <descriptorRefs>
                <descriptorRef>zip-all</descriptorRef>
              </descriptorRefs>
            </configuration>
          </execution>
          <execution>
            <id>zip-logic</id>
            <configuration>
              <tiles-keep-id>true</tiles-keep-id>
              <descriptorRefs>
                <descriptorRef>zip-logic</descriptorRef>
              </descriptorRefs>
            </configuration>
          </execution>
          <execution>
            <id>zip-logic-all</id>
            <configuration>
              <tiles-keep-id>true</tiles-keep-id>
              <descriptorRefs>
                <descriptorRef>zip-logic-all</descriptorRef>
              </descriptorRefs>
            </configuration>
          </execution>
          <execution>
            <id>zip-json</id>
            <configuration>
              <tiles-keep-id>true</tiles-keep-id>
              <descriptorRefs>
                <descriptorRef>zip-json</descriptorRef>
              </descriptorRefs>
            </configuration>
          </execution>
          <execution>
            <id>zip-sql</id>
            <configuration>
              <tiles-keep-id>true</tiles-keep-id>
              <descriptorRefs>
                <descriptorRef>zip-sql</descriptorRef>
              </descriptorRefs>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>